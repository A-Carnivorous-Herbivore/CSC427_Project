<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApp.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- New Dark Mode Theme -->
    <style name="Theme.MyFirstApp.DarkMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_500</item>
        <item name="colorSecondaryVariant">@color/grey_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color for dark mode -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Status bar color in Dark Mode -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customizing button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>

        <!-- Customizing EditText styles -->
        <item name="android:textColor">@color/white</item> <!-- Text color in EditText fields -->
        <item name="android:textColorHint">@color/grey_500</item> <!-- Hint text color -->
        <item name="android:backgroundTint">@color/grey_700</item> <!-- Background color for EditText fields -->
    </style>

    <!-- Updated Light Mode Theme -->
    <style name="Theme.MyFirstApp.LightMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/green_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color for light mode -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar color in Light Mode -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customizing button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="colorButtonNormal">@color/blue_500</item> <!-- Button background color -->

        <!-- Customizing EditText styles -->
<!--        <item name="editTextBackground">@color/grey_100</item> &lt;!&ndash; Background color for EditText fields &ndash;&gt;-->
        <item name="android:textColor">@color/black</item> <!-- Text color in EditText fields -->
        <item name="android:textColorHint">@color/grey_600</item> <!-- Hint text color -->
        <item name="android:backgroundTint">@color/grey_100</item> <!-- Background color for EditText fields -->
    </style>

    <style name="Theme.MyFirstApp.BlueRidge" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color (Alice Blue) -->
        <item name="colorPrimary">@color/alice_blue</item>
        <item name="colorPrimaryVariant">@color/yale_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Uranian Blue) -->
        <item name="colorSecondary">@color/uranian_blue</item>
        <item name="colorSecondaryVariant">@color/savoy_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/alice_blue</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Button colors -->
        <item name="colorButtonNormal">@color/savoy_blue</item>

        <!-- EditText styles -->
        <item name="android:backgroundTint">@color/uranian_blue</item>
        <item name="android:textColor">@color/yale_blue</item>
        <item name="android:textColorHint">@color/oxford_blue</item>
    </style>








</resources>
